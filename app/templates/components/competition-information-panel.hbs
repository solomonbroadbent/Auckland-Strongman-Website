<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading clearfix">
    <!-- Using a float with the button is a bit of a hack but works well enough responsively -->
    <div class="panel-title">
      Competition Information
      <button class="btn btn-default pull-right" {{action 'toggleEditMode'}}>
        <span class="glyphicon {{if inEditMode 'glyphicon-floppy-disk' 'glyphicon-pencil'}}"></span>
      </button>
    </div>
  </div>
  <!-- List group -->
  <ul class="list-group">
    <li class="list-group-item">
      <h4>
        <span class="input-group-addon">
          Competition name
        </span>
      </h4>
      <div class="input-lg">
        <input type="text" class="form-control" disabled={{notInEditMode}}>
      </div>
    </li>
    <li class="list-group-item">
      <h4>
        <span class="input-group-addon">
          Days
        </span>
      </h4>
      <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group" role="group" aria-label="First group">
          <button type="button" class="btn btn-default">
            1
            {{#if inEditMode}}
              <span class="glyphicon glyphicon-remove"></span>
            {{/if}}
          </button>
          <button type="button" class="btn btn-default">2</button>
          <button type="button" class="btn btn-default">3</button>
          <button type="button" class="btn btn-default">4</button>
        </div>
        {{#if inEditMode}}
          <div class="btn-group" role="group" aria-label="Third group">
            <button type="button" class="btn btn-default">
              <span class="glyphicon glyphicon-plus"></span>
            </button>
          </div>
        {{/if}}
      </div>
    </li>
    <li class="list-group-item">
      <h4>
        <span class="input-group-addon">
          Referee name
        </span>
      </h4>
      <div class="input-lg">
        <input type="text" class="form-control" disabled={{notInEditMode}}>
      </div>
    </li>
    <li class="list-group-item">
      <h4>
        <span class=" input-group-addon">
          Scorer name
        </span>
      </h4>
      <div class="input-lg">
        <input type="text" class="form-control" disabled={{notInEditMode}}>
      </div>
    </li>
  </ul>
</div>