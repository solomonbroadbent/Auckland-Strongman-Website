<div class="panel panel-default container-fluid">
  <div class="panel-heading row">
    <div class="col-lg-4">
      <div class=" input-group">
        <span class="input-group-addon" id="basic-addon3">Event name</span>
        <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3"
               disabled={{notInEditMode}}>
      </div>
    </div>
    <div class="col-lg-2">
      Most time
    </div>
    <div class="col-lg-offset-4 col-lg-2">
      <button class="btn btn-default" {{action 'toggleDataEntryMode'}}>
        <!-- The free glyphicon license somewhat ironically doesn't allow for the unlock symbol -->
        <span class="glyphicon {{if inDataEntryMode 'glyphicon-check' 'glyphicon-edit'}}"></span>
      </button>
      {{#if inEditMode}}
        <button class="btn btn-warning">
          <span class="glyphicon glyphicon-remove"></span>
        </button>
      {{/if}}
    </div>
  </div>
  <table class="table table-hover">
    <thead>
    <tr>
      <th class="col-lg-4">
        Athlete
      </th>
      <th class="col-lg-offset-3 col-lg-3">
        Time in seconds
      </th>
      <th class="col-lg-2">
        Points
      </th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <th>
        Bob
      </th>
      <td>
        <input type="text" class="form-control" disabled={{notInDataEntryMode}}>
      </td>
      <td>
        <input type="text" class="form-control" disabled={{notInDataEntryMode}}>
      </td>
    </tr>
    </tbody>
  </table>
</div>
{{yield}}