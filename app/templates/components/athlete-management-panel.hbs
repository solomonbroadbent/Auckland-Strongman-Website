<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading clearfix">
    <!-- Using a float with the button is a bit of a hack but works well enough responsively -->
    <div class="panel-title">
      Athlete Management
      <button class="btn btn-default pull-right" {{action 'toggleEditMode'}}>
        <span class="glyphicon {{if inEditMode 'glyphicon-floppy-disk' 'glyphicon-pencil'}}"></span>
      </button>
    </div>
  </div>
  <table class="table table-hover">
    <thead>
    <tr>
      <th class="col-lg-6">Name</th>
      <th class="col-lg-4">Weight</th>
      <th class="col-lg-2"></th>
    </tr>
    </thead>
    <tbody>
    {{#if inEditMode}}
      <tr>
        <td>
          {{input type="text" class="form-control" value=newAthleteName}}
        </td>
        <td>
          <div class="input-group">
            {{input type="text" class="form-control" value=newAthleteWeight}}
            <span class="input-group-addon">kG</span>
          </div>
        </td>
        <td>
          <button class="btn btn-default" {{action 'saveNewAthlete'}}>
            <span class="glyphicon-plus"></span>
          </button>
        </td>
      </tr>
      <tr>
        <th>
          Current Athletes
        </th>
        <!-- These empty td tags exist to keep the table hovering and formatting correct -->
        <td></td>
        <td></td>
      </tr>
    {{/if}}
    {{#each athletes as |athlete|}}
      {{athlete-management-panel-row
        athlete = athlete
        athleteName = athlete.name
        athleteWeight = athlete.weight
        inEditMode = inEditMode
      }}
    {{/each}}
    </tbody>
  </table>
</div>