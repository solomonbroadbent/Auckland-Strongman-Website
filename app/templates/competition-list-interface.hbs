    <div class="panel-heading">
      <div class="panel-heading clearfix">
        <!-- Using a float with the button is a bit of a hack but works well enough responsively -->
        <div class="panel-title">
          Competition Information
          <button class="btn btn-default pull-right"  {{action 'toggleEditMode'}}>
            <span class="glyphicon {{if inEditMode 'glyphicon-floppy-disk' 'glyphicon-pencil'}}"></span>
          </button>
        </div>
      </div>
    </div>
    <div class="panel-body">
      {{#if inEditMode}}
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="row">
              <div class="col-lg-6">
                <div class=" input-group">
                  <span class="input-group-addon" id="basic-addon3">new competition name</span>
                  <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                </div>
              </div>
              <div class="col-lg-2">
                Competition name
              </div>
              <div class="col-lg-offset-2 col-lg-2">
                <button class="btn btn-default">
                  <span class="glyphicon glyphicon-plus"></span>
                </button>
              </div>
            </div>
          </div>
        </div>
      {{/if}}
      <div class="panel panel-default">
        <table class="table table-hover">
          <tbody>
          {{#each competitions as |competition|}}
            <tr>
              <td class="col-lg-4">
                {{#if inEditMode}}
                  <div class=" input-group">
                    <span class="input-group-addon" id="basic-addon3">Competition Name</span>
                    {{input type="text" class="form-control" value=competitionName disabled=notInEditMode}}
                  </div>
                {{else}}
                  {{competitionName}}
                {{/if}}
              </td>
              <td class="col-lg-2">
                ##/##/## - ##/##/## {{competitionStartDate}} - {{competitionEndDate}}
              </td>
              <td class="col-lg-offset-3 col-lg-1">
                {{#if inEditMode}}
                  <button class="btn btn-warning pull-right">
                    <span class="glyphicon glyphicon-remove"></span>
                  </button>
                {{/if}}
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
